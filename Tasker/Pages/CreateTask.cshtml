@page "/create-task"
@model Tasker.Pages.CreateTaskModel
@{
    <h1>New Task</h1>
    <form asp-page="CreateTask" method="post">
        <label for="NewTask.Title">Title</label>
        <input type="text" form="NewTask.Title" />
        <label for="NewTask.Description">Description</label>
        <input type="text" form="NewTask.Description" />
        <label for="NewTask.Priority">Priority</label>
        <input type="text" form="NewTask.Priority" />
        <input type="submit" />
    </form>
}
